{
  "coc.preferences.extensionUpdateCheck": "daily",
  "explorer": {
      "icon": {
          "enableNerdfont": true
      }
  },
  "languageserver": {
      "bash": {
          "command": "bash-language-server",
          "args": ["start"],
          "filetypes": ["sh"],
          "ignoredRootPaths": ["~"]
    },
    "cmake": {
        "command": "cmake-language-server",
        "filetypes": ["cmake"],
        "rootPatterns": [
            "build/"
        ],
        "initializationOptions": {
            "buildDirectory": "build"
        }
    }
  }
}
